#!/usr/bin/env bash
set -e

ignores="install readme"

here="$(dirname "$0")"
here="$(cd "$here"; pwd)"

for file in "$here"/*; do
  name="$(basename "$file" .md)"
  [[ $name = bin || $name = nano ]] && dotname="$name" || dotname=".${name}"

  if [[ !( ${ignores} =~ $name || -e ~/$dotname || -d $file/.git ) ]]; then
    ln -sfv ${file#$HOME/} "${HOME}/${dotname}"
  fi
done

sh ${HOME}/.vim_runtime/install_awesome_vimrc.sh
